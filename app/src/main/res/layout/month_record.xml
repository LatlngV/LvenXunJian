<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_tv_date"
        android:layout_width="110dp"
        android:layout_height="@dimen/dp_50_y"
        android:background="#44000000"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        tools:text="2017-03-15"/>

    <View
        android:layout_width="@dimen/dp_1_x"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_tv_complete_number"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50_y"
        android:layout_weight="1"
        android:background="#44000000"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        tools:text="5"/>

    <View
        android:layout_width="@dimen/dp_1_x"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_tv_total_number"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50_y"
        android:layout_weight="1"
        android:background="#44000000"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        tools:text="10"/>

    <View
        android:layout_width="@dimen/dp_1_x"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_tv_percent"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50_y"
        android:layout_weight="1"
        android:background="#44000000"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        tools:text="50.00"/>

</LinearLayout>