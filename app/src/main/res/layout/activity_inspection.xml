<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inspection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#88000000">

        <ImageView
            android:id="@+id/inspection_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/dp_7_x"
            android:background="@drawable/check_in_record"/>

    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:id="@+id/inspection_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/inspection_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:padding="@dimen/dp_5_x"
            android:text="正常"
            android:textColor="@color/select_radio_button"
            android:textSize="18sp"/>

        <View
            android:layout_width="@dimen/dp_1_x"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="#88000000"/>

        <RadioButton
            android:id="@+id/inspection_repair"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:padding="@dimen/dp_5_x"
            android:text="建议维修"
            android:textColor="@color/select_radio_button"
            android:textSize="18sp"/>

        <View
            android:layout_width="@dimen/dp_1_x"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="#88000000"/>

        <RadioButton
            android:id="@+id/inspection_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="@dimen/dp_5_x"
            android:text="建议更换"
            android:textColor="@color/select_radio_button"
            android:textSize="18sp"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_y"
        android:background="#88000000"/>

    <FrameLayout
        android:id="@+id/inspection_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
