<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/repair_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#88000000">

        <ImageView
            android:id="@+id/repair_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/dp_7_x"
            android:background="@drawable/check_in_record"/>

    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:id="@+id/repair_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/repair_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="@dimen/dp_5_x"
            android:text="维修中"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/repair_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="@dimen/dp_5_x"
            android:text="已完成"
            android:textSize="18sp"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_y"
        android:background="#88000000"/>

    <FrameLayout
        android:id="@+id/repair_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
