<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:id="@+id/navigation_view_ll_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <cn.eyesw.lvenxunjian.widget.CircleImageView
            android:id="@+id/navigayion_view_staff_portrait"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/center_portrait"
            app:border_color="@color/yellow"
            app:border_width="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navigation_view_staff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="25sp"
                tools:text="习近平"/>

            <TextView
                android:id="@+id/navigation_view_staff_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:text="军委主席"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>